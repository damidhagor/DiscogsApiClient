<Window x:Class="DiscogsApiClientDemo.UserToken.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="DiscogsApiClient Demo" FontSize="16"
        Height="200" Width="600">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal">
            <Label Content="User Token:"/>
            <TextBox Text="{Binding UserToken, Mode=TwoWay}" Width="400" Margin="0,0,10,0"/>
            <Button Content="Login" Command="{Binding LoginCommand}"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <Label Content="Logged in user:"/>
            <Label Content="{Binding UserName, Mode=OneWay}"/>
        </StackPanel>
    </StackPanel>
</Window>
